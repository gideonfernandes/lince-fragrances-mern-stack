{
  "name": "lince-fragrances-mern-stack",
  "version": "1.0.0",
  "description": "This project is a Full Stack MERN Application that an user register an account and will be able to select perfumes at the ecommerce's list and purchase the items.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "clientinstall": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
